<div class="container-fluid">
    <div class="row">
        <!-- first -->
        <div class="col-md-3">
            {% block comment %}{% include "block/_comment.html.twig" %}{% endblock %}
        </div>
        <!-- end first -->

        <!-- middle -->
        <div class="col-md-6">
            <span>
                <a id="btn-back" type="button" class="btn btn-circle" href="{{ path('app_default') }}"><i
                        class="fas fa-home"></i></i></a>
                <span>
                    <a class="white" href="{{ path('app_default') }}">Accueil</a> <i class="fas fa-arrow-right"></i> <a
                        class="white" href="{{ path('app_default') }}">{{ category.forum.title|raw }}</a> <i
                        class="fas fa-arrow-right"></i>
                    <font class="font-weight-bold">{{category.title|raw}}</font>
                    <span>
                        <a id="btn-success" type="button" class="btn float-right"
                            href="{{ path('app_category_new', {'forum': category.forum.id}) }}"><i
                                class="fas fa-feather-alt"></i> Categorie</a>
                    </span>
                </span>
            </span>
            <div class="table">
                <div id="card" class="card shadow mb-3">
                    <div class="card-body">
                        <span class="float-left">
                            <h3 class="card-title">{{category.title|raw}}</h3>
                        </span>
                        <span class="float-right">
                            <a id="btn-warning" type="button" class="btn btn-circle"
                                href="{{ path('app_category_edit', {'forum': category.forum.id, 'category': category.id}) }}"><i
                                    class="fas fa-wrench"></i>
                            </a>
                            <a id="btn-success" type="button" class="btn btn-circle"
                                href="{{ path('app_topic_new', {'category': category.id}) }}"><i class="fas fa-plus"></i>
                            </a>
                        </span>
                        {% if category.description is defined and category.description is not null %}
                            <p id="description" class="card-text">{{ category.description|raw }}</p>
                        {% endif %}
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <tbody>
                                {% for topic in topics %}
                                <tr>
                                    <div class="container">
                                        <div class="row">
                                            <th scope="row"><i id="bookmark" class="col-1 far fa-bookmark"></i>
                                            </th>
                                            <td class="col-6">
                                                <a href="{{ path('app_topic_show', {'id': topic.id}) }}">
                                                    <h6>{{ topic.title }}</h6>
                                                </a>
                                                </n>
                                                {% if topic.content is defined and topic.content is not null %}
                                                <p>{{ topic.content|striptags|u.truncate(50, '...')|raw }}</p>
                                                {% endif %}
                                            </td>
                                            <td class="col-1">
                                                <p id="topic-message" class="text-center font-weight-bold">
                                                    {{ topic.comments|length }}</p>
                                                </n>
                                                {% if topic.comments|length <= 1 %}
                                                <p class="text-center font-weight-light">message</p>
                                                {% else %}
                                                <p class="text-center font-weight-light">messages</p>
                                                {% endif %}
                                            </td>
                                            <td class="col-1">
                                                <p id="topic-message" class="text-center font-weight-bold">0</p>
                                                </n>
                                                {% if topic.comments|length <= 1 %}
                                                <p class="text-center font-weight-light">vue</p>
                                                {% else %}
                                                <p class="text-center font-weight-light">vues</p>
                                                {% endif %}
                                            </td>
                                            <td class="col-3">
                                                <!-- TODO -->
                                            </td>
                                        </div>
                                    </div>
                                </tr>
                                {% else %}
                                <div class="alert alert-success m-3" role="alert">
                                    <i class="fas fa-coffee"></i></i>
                                     Soyez la première personne à écrire un sujet sur cette catégorie !
                                </div>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="pagination">
                {{ knp_pagination_render(topics) }}
            </div>
        </div>
        <!-- end middle -->

        <!-- last -->
        <div class="col-md-3">
            {% block discord %}{% include "block/_discordIntegration.html.twig" %}{% endblock %}
        </div>
        <!-- end last -->
    </div>
</div>
{% endblock %}

{% block javascript %}
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script></script>
{% endblock %}