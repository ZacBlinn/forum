                            <a id="btn-success" type="button" class="btn btn-circle" href="{{ path('category_new', {'forum': forum.id}) }}"><i class="fas fa-plus"></i></a>
                        </span>
                        {% if forum.description is defined and forum.description is not null %}
                            <br>
                            <br>
                            <p class="card-text">{{ forum.description|striptags|u.truncate(55, true)|raw }}</p>
                        {% endif %}
                    </div>
                    <table class="table table-hover">
