{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div id="card" class="card shadow mb-4 p-3">
                <form method="post">
                    {% if error %}
                    <div class="alert alert-danger">{{ error.getMessageKey()|trans(error.getMessageData(), 'security') }}</div>
                    {% endif %}

                    {% if app.getUser() %}
                    <div class="mb-3">
                        Vous êtes connecté en tant que {{ app.getUser().getUsername() }}, <a href="{{ path('app_logout') }}">se
                            deconnecter</a>
                    </div>
                    {% endif %}

                    <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                        required autofocus>
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <br>
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Se souvenir de moi
                        </label>
                    </div>

                    <button id="btn-success" class="btn float-right" type="submit">
                        Connexion
                    </button>
                    <br><br>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}